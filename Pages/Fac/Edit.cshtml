@page
@model Conexion.Pages.Fac.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Factura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Factura.FacturaID" />
            <div class="form-group">
                <label asp-for="Factura.ProductoID" class="control-label"></label>
                <select asp-for="Factura.ProductoID" class="form-control" asp-items="ViewBag.ProductoID"></select>
                <span asp-validation-for="Factura.ProductoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factura.PrecioUnitario" class="control-label"></label>
                <input asp-for="Factura.PrecioUnitario" class="form-control" />
                <span asp-validation-for="Factura.PrecioUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factura.Cantidad" class="control-label"></label>
                <input asp-for="Factura.Cantidad" class="form-control" />
                <span asp-validation-for="Factura.Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Factura.Subtotal" class="control-label"></label>
                <input asp-for="Factura.Subtotal" class="form-control" />
                <span asp-validation-for="Factura.Subtotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
